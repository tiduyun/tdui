{
  "name": "@tdio/tdui",
  "version": "1.4.2",
  "description": "Tiduyun.com Front-End UI",
  "module": "lib/index.es.js",
  "types": "lib/index.d.ts",
  "keywords": [
    "ui"
  ],
  "scripts": {
    "precommit": "yarn lint && yarn test",
    "lint:ts": "eslint src/",
    "lint:style": "stylelint --syntax=scss 'src/**/*.scss'",
    "lint": "yarn lint:ts && yarn lint:style",
    "lint:fix": "yarn lint:ts --fix && yarn lint:style --fix",
    "test": "jest --coverage --passWithNoTests",
    "build": "rb -c && cp -rf src/styles lib/",
    "prepare": "test -n \"$CI\" || yarn build",
    "prerelease": "standard-version --release-as patch --prerelease --skip.changelog=true"
  },
  "author": "TIDU (http://tidu.io/)",
  "dependencies": {
    "@allex/base64": "^1.0.2",
    "@emotion/css": "^11.1.3",
    "@juggle/resize-observer": "^3.3.1",
    "@tdio/dom-utils": "^1.0.0",
    "@tdio/locale": "^1.0.0",
    "@tdio/utils": "^1 || next",
    "classnames": "^2.2.6",
    "clipboard": "^2.0.8",
    "querystring": "^0.2.0",
    "tslib": "^2",
    "vue-resize-observer": "^1.0.1",
    "vue-types": "^2.0.3"
  },
  "peerDependencies": {
    "element-ui": "*",
    "vue": "^2.6.6",
    "vue-property-decorator": "^8",
    "vuex": "^3.0.1"
  },
  "devDependencies": {
    "@babel/core": "^7.6.2",
    "@babel/preset-env": "^7.6.2",
    "@babel/runtime": "^7.6.2",
    "@commitlint/cli": "^7.2.1",
    "@tdio/commitlint-conventional": "^1.0.1",
    "@types/classnames": "^2.2.11",
    "@types/node": "^12.12.16",
    "@vue/babel-preset-jsx": "^1.1.2",
    "babel-core": "bridge",
    "babel-jest": "^23.6.0",
    "babel-plugin-transform-async-to-promises": "^0.8.15",
    "element-ui": "~2.15.14",
    "husky": "^1.3.1",
    "jest": "^23.6.0",
    "lint-staged": "^8.1.5",
    "rollup-worker": "next",
    "sass": "^1.69.7",
    "stylelint": "^9.10.1",
    "stylelint-config-standard": "^18.2.0",
    "stylelint-scss": "^3.6.0",
    "ts-mockito": "^2.3.0",
    "ts-node": "^7.0.0",
    "vue": "^2.6.6",
    "vue-property-decorator": "^8.3.0",
    "vuex": "^3.0.1"
  },
  "license": "MIT",
  "files": [
    "lib/",
    "types"
  ],
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged",
      "commit-msg": "commitlint -E HUSKY_GIT_PARAMS"
    }
  },
  "lint-staged": {
    "*.{jsx,ts,tsx,vue}": [
      "yarn lint:ts --",
      "git add"
    ],
    "*.scss": [
      "stylelint --syntax=scss --fix",
      "git add"
    ]
  },
  "jest": {
    "testEnvironment": "node",
    "modulePaths": [
      "src"
    ],
    "testMatch": [
      "**/?(*-)+(spec|test).?(m)js"
    ],
    "roots": [
      "test"
    ],
    "moduleFileExtensions": [
      "js"
    ],
    "moduleDirectories": [
      "node_modules"
    ],
    "transform": {
      "\\.js$": "babel-jest"
    }
  }
}
